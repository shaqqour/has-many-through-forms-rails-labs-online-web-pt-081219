<%= form_for post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br>
    <%= f.label :content %><br>
    <%= f.text_area :content %><br>
    <%= f.label :categories, "Categories:" %><br>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>
    <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
        <%= categories_fields.text_field :name, placeholder: "Create a new category" %>
    <% end %><br><br>
    <%= f.submit %>
<% end %>